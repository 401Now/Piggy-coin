<body>

    <div class="coin-container">
        <div id="coin">FLIP ME</div>
    </div>
    
    <button onclick="flip()">Flip Coin</button>

    <script>
        function flip() {
            const coin = document.getElementById('coin');
            const isHeads = Math.random() < 0.5;
            
            // Spinning effect
            coin.style.transform = "rotateY(720deg)";
            coin.innerText = "...";

            setTimeout(() => {
                coin.style.transform = "rotateY(0deg)";
                coin.innerText = isHeads ? "HEADS" : "TAILS";
                coin.style.background = isHeads 
                    ? "radial-gradient(circle, #ffd700, #b8860b)" 
                    : "radial-gradient(circle, #d3d3d3, #708090)";
                coin.style.borderColor = isHeads ? "#8b6508" : "#2f4f4f";
            }, 500);
        }
    </script>
</body>
